<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <description>Sitemap Bundle PHPCS Config</description>

    <file>Command/</file>
    <file>Controller/</file>
    <file>DependencyInjection/</file>
    <file>Resources/</file>
    <file>Tests/</file>
    <file>LarapulseSitemapBundle.php</file>

    <extensions>php</extensions>

    <rule ref="PSR2"/>
    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <severity>0</severity>
    </rule>
</ruleset>
